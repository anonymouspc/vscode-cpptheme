{
    "scopeName": "punctuation.injection",
    "injectionSelector": "source.cpp & -comment & -string",
    "patterns": [
        {
            "match": "\\(",
            "name": "punctuation.section.parens.begin.cpp"
        },
        {
            "match": "\\)",
            "name": "punctuation.section.parens.end.cpp"
        },
        {
            "match": "\\[",
            "name": "punctuation.section.square.begin.cpp"
        },
        {
            "match": "\\]",
            "name": "punctuation.section.square.end.cpp"
        },
        {
            "match": "\\{",
            "name": "punctuation.section.block.begin.cpp"
        },
        {
            "match": "\\}",
            "name": "punctuation.section.block.end.cpp"
        },
        {
            "match": "<",
            "name": "punctuation.section.angle-brackets.begin.cpp"
        },
        {
            "match": ">",
            "name": "punctuation.section.angle-brackets.end.cpp"
        },
        {
            "match": "\\.",
            "name": "punctuation.separator.dot-access.cpp"
        },
        {
            "match": ":",
            "name": "punctuation.separator.scope-resolution.cpp"
        },
        {
            "match": ",",
            "name": "punctuation.separator.delimiter.comma.cpp"
        },
        {
            "match": ";",
            "name": "punctuation.terminator.statement.cpp"
        }
    ]
}